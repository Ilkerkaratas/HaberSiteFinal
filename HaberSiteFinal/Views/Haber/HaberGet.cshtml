@model HaberSiteFinal.Models.Haber
@{
    ViewData["Title"] = "HaberGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Haber Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("HaberUpdate", "Haber", FormMethod.Post))
{
    @Html.Label("Haber Id")
    @Html.TextBoxFor(x => x.HaberID, new { @class = "form-control" })
    @Html.Label("Haber Name")
    @Html.TextBoxFor(x => x.HaberName, new { @class = "form-control" })
    <br />
    @Html.Label("Image Url")
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br />
    @Html.Label("Description")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
}

